{% extends 'base.html.twig' %}

{% block title %}Éditer un adulte{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <main>
        <h1>Éditer un adulte</h1>

        {% for message in app.flashes('SuccessAdulte') %}
            <div class="flash-success">
                {{ message }}
            </div>
        {% endfor %}

        <div>
            <div class="container-fluid formEntité2" id="formAdulte">
                {{ include('adulte/_form.html.twig') }}
            </div>
        </div>
        <div class="row">
            <div id="divAjout">
                <button type="submit" class="btn btn-success" form="adulteForm">
                    Modifier l'adulte
                </button>
                <a href="{{ path('adulte_index') }}"
                   class="btn btn-secondary" id="btnRetour">
                    Revenir à la liste
                </a>
            </div>
        </div>
    </main>
{% endblock %}
