{% extends 'base.html.twig' %}

{% block title %}Liste des desserts{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <h1>Liste des desserts</h1>
    <div>
        <a href="{{ path('dessert_new') }}"
           class="btn btn-primary" id="btnAjout">
            Ajouter un nouveau dessert
        </a>
        <a href="{{ path('espace_admin') }}"
           class="btn btn-secondary" id="btnRetour">
            Retourner à l'espace administration
        </a>
    </div>
    <div>
        {{form_start(form)}}
        <div id="filtre" class="filtre form-row align-items-end">
            <div class="selectFiltre">
                <div>
                    <span>{{form_label(form.ordre)}}</span>
                    {{form_widget(form.ordre)}}
                    <span>{{form_label(form.dispo)}}</span>
                    {{form_widget(form.dispo)}}
                </div>
                <div>
                    <button type="submit" class="btn btn-info" >
                        Afficher
                    </button>
                </div>
            </div>
        </div>
        {{form_end(form)}}
    </div>
    <div>
        {{ knp_pagination_render(desserts) }}
    </div>
    <div class="table-responsive-lg">
        <table class="table table-lg tableAdmin">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Liste d'ingrédients</th>
                    <th>Liste de commentaires</th>
                    <th>Disponibilité</th>
                    <th>Éditer</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
            {% for dessert in desserts %}
                <tr>
                    <td>
                        {% if dessert.imageDessert %}
                            <img src="{{ asset('uploads/imgDessert/' ~ dessert.imageDessert) }}" alt="photo d'un dessert">
                        {% else %}
                            <img src="{{ asset('/static/images/placeholder.jpg') }}" alt="placeholder">
                        {% endif %}
                    </td>
                    <td>{{ dessert.nomDessert }}</td>
                    <td>{{ dessert.ingredientDessert ? dessert.ingredientDessert : 'Aucune description' }}</td>
                    <td>{{ dessert.commentaireDessert ? dessert.commentaireDessert : 'Aucun commentataire'}}</td>
                    <td>{{ dessert.dispoDessert ? '<i class="fas fa-check"></i>' :
                        '<i class="fas fa-times"></i>' }}</td>
                    <td>
                        <a href="{{ path('dessert_edit',
                            {'id': dessert.id}) }}" class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('dessert_delete_view',
                            {'id': dessert.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="erreur">Aucune donnée n'a été trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
        {{ knp_pagination_render(desserts) }}
    </div>
{% endblock %}
