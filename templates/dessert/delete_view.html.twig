{% extends 'base.html.twig' %}

{% block title %}Suppression d'un dessert{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}
{% block body %}
    <main>
        <h1>Suppression d'un dessert</h1>

        <h2>Cliquez sur le bouton Supprimer pour supprimer le dessert choisi : {{dessert.nomDessert}}</h2>

        <div id="warning">
            <p><i class="fas fa-exclamation-triangle"></i> Attention : toutes les commandes faites avec ce dessert vont être supprimées.</p>
        </div>

        {{ include('dessert/_delete_form.html.twig') }}

        <div>
            <a href="{{ path('dessert_index') }}">
                <button class="btn btn-secondary" id="btnRetourSuppr">
                    Revenir à la liste
                </button> 
            </a>
        </div>
    </main>
{% endblock %}