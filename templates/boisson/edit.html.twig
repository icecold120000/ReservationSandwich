{% extends 'base.html.twig' %}

{% block title %}Modifier une boisson{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <main class="container-fluid">
        <h1>Modifier une boisson</h1>

        {% for message in app.flashes('SuccessBoisson') %}
            <div class="flash-success">
                {{ message }}
            </div>
        {% endfor %}

        <div>
            <div class="container-fluid formEntité" id="formBoisson">
                {{ include('boisson/_form.html.twig') }}
            </div>
        </div>
        <div class="row">
            <div id="divAjout">
                <button type="submit" class="btn btn-success" form="boissonForm">
                    Modifier la boisson
                </button>
                <a href="{{ path('boisson_index') }}"
                   class="btn btn-secondary" id="btnRetour">
                    Revenir à la liste
                </a>
            </div>
        </div>
    </main>
{% endblock %}
