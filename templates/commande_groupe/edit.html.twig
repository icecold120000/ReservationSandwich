{% extends 'base.html.twig' %}

{% block title %}Commande Groupée{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <h1>Modifier une commande groupée</h1>
    {% for message in app.flashes('SuccessComGr') %}
        <div class="flash-success">
            {{ message }}
        </div>
    {% endfor %}
    <div>
        <div class="container-fluid formEntité2" id="commandeFormGroupe">
            {{ include('commande_groupe/_form.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div id="divAjout">
            <button type="submit"
                    class="btn btn-success" form="formCommandeGroupe" id="btnComGroupe">
                Modifier votre commande groupée
            </button>
            <a href="{{ path('commande_individuelle_index') }}"
               class="btn btn-secondary" id="btnRetour">
                Revenir à la liste
            </a>
        </div>
    </div>
{% endblock %}