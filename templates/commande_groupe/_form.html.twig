{{ form_start(form) }}
    <div id="screenLeft">
        {{ form_label(form.sandwichChoisi1) }}
        {% if form_errors(form.sandwichChoisi1) %}
            <div class="erreur">
                {{form_errors(form.sandwichChoisi1)}}
            </div>
        {% endif %}
        {{ form_widget(form.sandwichChoisi1) }}
        <div id="sandwich1Carousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for sandwich in sandwichs %}
                    <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}" data-bs-interval="8000">
                        <label for="commande_groupe_sandwichChoisi1_{{ sandwich.id }}">
                            <img src="{{ asset('uploads/imgSandwich/' ~ sandwich.imageSandwich) }}" class="d-block " alt="{{ sandwich.nomSandwich }}-image">
                            <p>{{ sandwich.nomSandwich }}</p>
                            <p>Ingrédients : {{ sandwich.ingredientSandwich ? sandwich.ingredientSandwich : 'Aucune description précisé.'}}</p>
                            <p>Commentaires : {{ sandwich.commentaireSandwich ? sandwich.commentaireSandwich : 'Aucun commentataire précisé.'}}</p>
                            <input type="radio" id="commande_groupe_sandwichChoisi1_{{ sandwich.id }}"
                                   name="commande_groupe[sandwichChoisi1]" value="{{ sandwich.id }}" >
                        </label>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#sandwich1Carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#sandwich1Carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
