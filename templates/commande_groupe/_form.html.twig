<script>
    {% for sandwich in sandwichs %}
    const firstSelectedSandwich{{ sandwich.id }} = document.getElementById('commande_groupe_sandwichChoisi1_{{ sandwich.id }}');
    if (firstSelectedSandwich{{ sandwich.id }}.checked === true) {
        const inputSandwich = document.getElementById('input_commande_groupe_sandwichChoisi1_{{ sandwich.id }}')
        inputSandwich.checked = true;
    }
    const secondSelectedSandwich{{ sandwich.id }} = document.getElementById('commande_groupe_sandwichChoisi2_{{ sandwich.id }}');
    if (secondSelectedSandwich{{ sandwich.id }}.checked === true) {
        const inputSandwich = document.getElementById('input_commande_groupe_sandwichChoisi2_{{ sandwich.id }}')
        inputSandwich.checked = true;
    }
    {% endfor %}

    {% for dessert in desserts %}
    const selectedDessert{{ dessert.id }} = document.getElementById('commande_groupe_dessertChoisi_{{ dessert.id }}');
    if (selectedDessert{{ dessert.id }}.checked === true) {
        const inputDessert = document.getElementById('input_commande_groupe_dessertChoisi_{{ dessert.id }}')
        inputDessert.checked = true;
    }
    {% endfor %}
</script>
