{{ form_start(form) }}
<div id="screenLeft">
    <div class="noDisplay">
        {{ form_label(form.sandwichChoisi1) }}
        {% if form_errors(form.sandwichChoisi1) %}
            <div class="erreur">
                {{ form_errors(form.sandwichChoisi1) }}
            </div>
        {% endif %}
        {{ form_widget(form.sandwichChoisi1) }}
    </div>
    <div id="sandwich1Carousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for sandwich in sandwichs %}
                <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}" data-bs-interval="8000">
                    <label for="input_commande_groupe_sandwichChoisi1_{{ sandwich.id }}">
                        <img src="{{ asset('uploads/imgSandwich/' ~ sandwich.imageSandwich) }}" class="d-block "
                             alt="{{ sandwich.nomSandwich }}-image">
                        <span>{{ sandwich.nomSandwich }}</span>
                        <span>Ingrédients : {{ sandwich.ingredientSandwich ? sandwich.ingredientSandwich : 'Aucune description précisé.' }}</span>
                        <span>Commentaires : {{ sandwich.commentaireSandwich ? sandwich.commentaireSandwich : 'Aucun commentataire précisé.' }}</span>
                        <input type="radio" id="input_commande_groupe_sandwichChoisi1_{{ sandwich.id }}"
                               name="commande_groupe[sandwichChoisi1]" value="{{ sandwich.id }}">
                    </label>
                </div>
            {% else %}
                <img src="{{ asset('/static/images/placeholder.png') }}" alt="placeholder">
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#sandwich1Carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#sandwich1Carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    {{ form_label(form.nbSandwichChoisi1) }}
    {% if form_errors(form.nbSandwichChoisi1) %}
        <div class="erreur">
            {{ form_errors(form.nbSandwichChoisi1) }}
        </div>
    {% endif %}
    <div class="divInput">
        {{ form_widget(form.nbSandwichChoisi1) }}
    </div>
    <div>
        <div class="noDisplay">
            {{ form_label(form.dessertChoisi) }}
            {% if form_errors(form.dessertChoisi) %}
                <div class="erreur">
                    {{ form_errors(form.dessertChoisi) }}
                </div>
            {% endif %}
            {{ form_widget(form.dessertChoisi) }}
        </div>
        <div id="dessertCarousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for dessert in desserts %}
                    <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}" data-bs-interval="8000">
                        <label for="input_commande_groupe_dessertChoisi_{{ dessert.id }}">
                            <img src="{{ asset('uploads/imgDessert/' ~ dessert.imageDessert) }}" class="d-block"
                                 alt="{{ dessert.nomDessert }}-image">
                            <span>{{ dessert.nomDessert }}</span>
                            <span>Ingrédients : {{ dessert.ingredientDessert ? dessert.ingredientDessert : 'Aucune description précisé.' }}</span>
                            <span>Commentaires : {{ dessert.commentaireDessert ? dessert.commentaireDessert : 'Aucun commentataire précisé.' }}</span>
                            <input type="radio" name="commande_groupe[dessertChoisi]" value="{{ dessert.id }}"
                                   id="input_commande_groupe_dessertChoisi_{{ dessert.id }}">
                        </label>
                    </div>
                {% else %}
                    <img src="{{ asset('/static/images/placeholder.png') }}" alt="placeholder">
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#dessertCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#dessertCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    {{ form_label(form.motifSortie) }}
    {{ form_help(form.motifSortie) }}
    {% if form_errors(form.motifSortie) %}
        <div class="erreur">
            {{ form_errors(form.motifSortie) }}
        </div>
    {% endif %}
    <div class="divInput">
        {{ form_widget(form.motifSortie) }}
    </div>
</div>
