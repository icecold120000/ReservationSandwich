{% extends 'base.html.twig' %}

{% block title %}Modifier un sandwich{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <main class="container-fluid">
        <h1>Modifier le sandwich</h1>
        {% for message in app.flashes('SuccessSandwich') %}
            <div class="flash-success">
                {{ message }}
            </div>
        {% endfor %}
        <div>
            <div class="container-fluid formEntité2" id="formSandwich">
                {{ include('sandwich/_form.html.twig') }}
            </div>
        </div>
        <div class="row">
            <div id="divAjout">
                <button type="submit" class="btn btn-success" form="sandwichForm">
                    Modifier le sandwich
                </button>
                <a href="{{ path('sandwich_index') }}"
                   class="btn btn-secondary" id="btnRetour">
                    Revenir à la liste
                </a>
            </div>
        </div>
    </main>
{% endblock %}
