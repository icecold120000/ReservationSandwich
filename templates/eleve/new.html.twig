{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau élève{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <h1>Ajouter un nouveau élève</h1>

    {% for message in app.flashes('SuccessEleve') %}
        <div class="flash-success">
            {{ message }}
        </div>
    {% endfor %}

    <div>
        <div class="container-fluid formEntité2" id="formEleve">
            {{ include('eleve/_form.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div id="divAjout" class="form-actions">
            <button type="submit" class="btn btn-success" form="eleveForm">
                Enregistrer l'élève
            </button>
            <a href="{{ path('eleve_index') }}">
                <button class="btn btn-secondary" id="btnRetour">
                    Revenir dans la liste
                </button>
            </a>
        </div>
    </div>
{% endblock %}