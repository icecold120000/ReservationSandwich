{% extends 'base.html.twig' %}

{% block title %}Suppression d'un élève{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{asset('static/css/admin.css')}}">{% endblock %}

{% block body %}
    <h1>Suppression</h1>

    <p>Cliquez sur le bouton Supprimer pour supprimer l'élève choisi :
        {{eleve.prenomEleve}} {{eleve.nomEleve}}</p>

    <div id="warning">
        <p><i class="fas fa-exclamation-triangle"></i> Attention :le compte de l'élève et
            toutes les commandes faites par cette élève seront supprimés !</p>
    </div>

    {{ include('eleve/_delete_form.html.twig') }}

    <div>
        <a href="{{ path('eleve_index') }}">
            <button class="btn btn-secondary" id="btnRetour">
                Revenir dans la liste
            </button>
        </a>
    </div>

{% endblock %}
