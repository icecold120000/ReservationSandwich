{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <main class="container-fluid">
        <div class="container" id="login">
            <div id="screenLeft">
                <h1 class="title">Connectez-vous</h1>
                {% for message in app.flashes('successInscription') %}
                    <div class="flash-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if error %}
                    <div class="erreur">
                        {{ error.messageKey | trans(error.messagedata, 'security')}}
                    </div>
                {% endif %}
                <form id="formConnexion" action="
                {{ path('app_login') }}" method="POST">
                    <label class="labels" id="lblEmail">Email<span>*</span> :</label>
                    <div>
                        <input type="email" name=
                        "email" class="form-control" required>
                    </div>
                    <label class="labels">
                        Mot de passe<span>*</span> :</label>
                    <div>
                        <input type="password" name=
                        "password" class="form-control" required>
                    </div>
                    <div>
                        <label class="labels">
                            <input type="checkbox" name="_remember_me" checked id="rememberMe"/>
                            Rester connecter
                        </label>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                </form>
                <div class="row" id="loginSubmit" >
                    <div>
                        <button type="submit" form="formConnexion"
                                class="btn btn-success">
                            Se connecter
                        </button>
                        <a class="btn btn-info" href="{{path('oubli_mdp')}}">
                            Mot de passe oublié ?
                        </a>
                    </div>
                </div>
            </div>
            <div id="screenRight">
                <h1 class="title">Pas encore de compte ?</h1>
                <h6>Vous êtes élève ou personnel de l'établissement et vous n'avez pas encore de compte sur la plateforme ?</h6>
                <a id="btnRegister" href={{path('app_register')}} >
                    Accéder au formulaire d'inscription
                </a>
            </div>
        </div>
    </main>
{% endblock %}
